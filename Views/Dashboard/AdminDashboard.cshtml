@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mt-4">Welcome Admin</h2>
<div class="row">
    <div class="col-md-4">
        <div class="card border-primary shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Manage Users</h5>
                <p class="card-text">Create, edit, or delete users and assign roles.</p>
                <a asp-controller="Admin" asp-action="Users" class="btn btn-primary">Go</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-success shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Chart of Accounts</h5>
                <p class="card-text">Add or modify account categories.</p>
                <a asp-controller="ChartOfAccount" asp-action="Index" class="btn btn-success">Manage</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card border-info shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Vouchers</h5>
                <p class="card-text">View and create financial vouchers.</p>
                <a asp-controller="Voucher" asp-action="Index" class="btn btn-info">View</a>
            </div>
        </div>
    </div>
</div>
