@model MiniAccountSystem.Models.AccountChart
@{
    ViewData["Title"] = "Add Account";
}

<h2>Add Account</h2>
<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Account Name</label>
        <input asp-for="AccountName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Account Type</label>
        <input asp-for="AccountType" class="form-control" />
    </div>
    <div class="form-group">
        <label>Parent Account Id (Optional)</label>
        <input asp-for="ParentAccountId" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Save</button>
</form>
