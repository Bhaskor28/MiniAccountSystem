@model IEnumerable<MiniAccountSystem.Models.AccountChart>
@{
    ViewData["Title"] = "Chart of Accounts";
}

<h2>Chart of Accounts</h2>
<a asp-action="Create" class="btn btn-primary mb-2">+ Add Account</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Parent</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var acc in Model)
        {
            <tr>
                <td>@acc.AccountName</td>
                <td>@acc.AccountType</td>
                <td>@acc.ParentAccountId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@acc.AccountId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@acc.AccountId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
