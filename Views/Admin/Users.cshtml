@model List<(string UserId, string Email, IList<string> Roles)>

<h2>User List</h2>
<table>
    <thead>
        <tr><th>Email</th><th>Roles</th><th>Actions</th></tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="AssignRole" asp-route-id="@user.UserId">Assign Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
